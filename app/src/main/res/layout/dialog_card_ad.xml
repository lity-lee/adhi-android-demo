<?xml version="1.0" encoding="utf-8"?>
<com.qq.e.ads.nativ.widget.NativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <LinearLayout
        android:id="@+id/dialog_content"
        android:orientation="vertical"
        android:background="@drawable/line_round_bg"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/interactive_popup_icon" />
    <TextView
        android:textSize="17sp"
        android:textColor="#333"
        android:text="恭喜你！"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#dd522b"
        android:gravity="center_horizontal"
        android:text="您刚获得一个福袋"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/button_bg"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:text="立即领取"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="180dp"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国移动"
                android:textColor="#333"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/desc"
                android:textSize="15sp"
                android:textColor="#9a9a9a"
                android:text="Vip视频会议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:background="@drawable/text_bg"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:text="立即领取"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </LinearLayout>
</com.qq.e.ads.nativ.widget.NativeAdContainer>