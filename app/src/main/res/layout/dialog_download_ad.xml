<?xml version="1.0" encoding="utf-8"?>
<com.qq.e.ads.nativ.widget.NativeAdContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/adContainer"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingBottom="20dp"
        android:background="@drawable/line_round_bg"
        android:id="@+id/dialog_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/icon"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:text="通讯录导入，换机械克隆手机"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="一建处理"
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/icon2"
        android:layout_marginStart="15dp"
        android:layout_width="300dp"
        android:layout_height="300dp"/>
    <TextView
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_bg"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="查看详情"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    </LinearLayout>
</com.qq.e.ads.nativ.widget.NativeAdContainer>